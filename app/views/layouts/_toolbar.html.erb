<div class="toolbar">
  <ul>
  <!-- cover view -->
  <li><%= content_tag :a, nil, class: 'change-my-view', 'view': 'covers', 'coll_id': collection.id, 'uk-icon': 'thumbnails' %></li>
  <!-- panels view -->
  <li><%= content_tag :a, nil, class: 'change-my-view', 'view': 'panels', 'coll_id': collection.id, 'uk-icon': 'list' %></li>
  <!-- list view -->
  <li><%= content_tag :a, nil, class: 'change-my-view', 'view': 'list', 'coll_id': collection.id, 'uk-icon': 'table' %></li>
  <!-- change theme -->
  <li><%= content_tag :a, nil, id: 'change-theme', 'uk-icon': 'paint-bucket' %></li>
  <!-- hide overlays -->
  <li><%= content_tag :a, nil, id: 'addl-hide', 'uk-icon': 'close' %></li>
  <!-- hide cover view info -->
  <li><%= content_tag :a, nil, id: 'undercover', 'uk-icon': 'question' %></li>
  <!-- show options -->
  <% extra = 'active' if edit_open? %>
  <li><%= content_tag :a, nil, id: 'g-show-edit', class: extra, 'uk-icon':'cog' %></li>
  <!-- scroll up -->
  <li><a class="" href="#target"
    uk-icon="icon: arrow-up; ratio: 1"
    uk-scroll="duration: 600"></a></li>
  </ul>
</div>
