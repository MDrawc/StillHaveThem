<!DOCTYPE html>
<html>
  <head>
    <title><%= title.titlecase %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_link_tag "#{current_theme}", id: 'theme-control', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  </head>
  <body>
    <%= render 'layouts/menu' %>
    <div class="main-container">
      <%= render 'layouts/navigation' %>
      <div class="uk-grid-match uk-grid-collpase" uk-grid>
        <div class="uk-width-1-6"></div>
        <div class="uk-width-2-3">
          <div id="big-c" class="uk-container uk-container-expand">
            <%= yield %>
          </div>
        </div>
        <div class="uk-width-1-6"></div>
      </div>
    <%= render 'layouts/footer' %>
    </div>
    <div id="f-modal" uk-modal>
        <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">
            <div class="modal-content">
                <span class="loading">Loading</span>
            </div>
        </div>
    </div>
  </body>
</html>
