<% unless errors[:title].empty? %>
    <% error = "Title #{ errors[:title][0] }" %>
    $("#title-icon").replaceWith("<%= j(render partial: 'warning', locals: { id: 'title-icon', error: error  }) %>");
    resetShWarningIcon('title', '#share_title');
<% end %>

