<h2>share form</h2>
<%= form_with model: @share, id: 'share-form' do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :message %>
  <%= f.collection_check_boxes :shared, current_user.collections, :id, :name, class: "" do |c| %>
    <% c.label(class: "form-check-label") { c.check_box(class: "form-check-input", type: "checkbox") + c.text } %>
  <% end %>

  <%= content_tag :a, 'none', id: 'share-none' %>
  <%= content_tag :a, 'all', id: 'share-all' %>

        <%= f.submit 'Generate share link', class: "uk-button uk-button-default" %>
        <%= f.submit('Reset', class: "uk-button uk-button-default", type: "reset" )%>

<% end %>

<hr>
<div id="active-shares"></div>
