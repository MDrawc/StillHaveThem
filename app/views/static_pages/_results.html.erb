<% if @inquiry.results.present? %>
  <%= render 'cover_view' %>
<% if @inquiry.is_more? %>
<div id="show-more">
  <%= form_tag("/search", method: :get, remote: true) do %>
  <%= hidden_field_tag :last_input, @inquiry.last_input %>
  <%= hidden_field_tag :last_offset, @inquiry.offset %>
  <%= submit_tag "Load more...",
  class: "uk-button uk-button-default md-button",
  data: { disable_with: "Please wait..." } %>
  <% end %>
</div>
<% else %>
<% if status = @inquiry.status_id == 2 %>
<div uk-scrollspy="cls: uk-animation-shake; repeat: true">
  <p>I can't show you more, try to be more precise.</p>
</div>
<% end %>
<% end %>
<% else %>
<!-- New partial here no results -->
<p>0 results for "<%= @inquiry.query %>"</p>
<!-- Give nicer better explanation maybe with buttons and links -->
<p>Try using "*" for searching (example: *shadd* > El Shaddai: Ascension of the Metatron)</p>
<% end %>

<div class="scroll-up">
  <a class="scroll-up-button" href="#target"
    uk-icon="icon: arrow-up; ratio: 1.5"
    uk-scroll="duration: 600" style="display: none"></a>
</div>

<script>
// Show scroll-up-button
$(window).scroll(function() {
    if ($(window).scrollTop() > 200) {
       $('.scroll-up-button').fadeIn()
    }
    else {
       $('.scroll-up-button').fadeOut()
    }
});
</script>
