<% if @results.present? %>
  <%= render 'cover_view/cover_view' %>
  <% if @more_in_req %>
  <div id="show-more">
    <%= form_tag("/search_games", method: :get, remote: true) do %>
    <%= hidden_field_tag :cut, true %>
    <%= submit_tag "Load more",
    class: "cf-add-button",
    data: { disable_with: "Please wait..." } %>
    <% end %>
  </div>
  <% elsif @more_in_off %>
    <div id="show-more">
      <%= form_tag("/search_games", method: :get, remote: true) do %>
      <%= hidden_field_tag :last_form, @more_in_off[:last_form] %>
      <%= hidden_field_tag :last_query, @more_in_off[:query] %>
      <%= hidden_field_tag :last_offset, @more_in_off[:offset] %>
      <%= submit_tag "Load more",
      class: "cf-add-button",
      data: { disable_with: "Please wait..." } %>
      <% end %>
    </div>
  <% else %>
    <% if @status == 2 %>
      <div class="no-more">
        <button class="cf-add-button" uk-scroll>Can't show you more. Try being more precise.</button>
      </div>
    <% end %>
  <% end %>
<% else %>
  <div class="no-results">
    <p>No results</p>
  </div>
<% end %>
<div class="scroll-up">
  <a class="scroll-up-button" href="#target"
    uk-icon="icon: arrow-up; ratio: 1.5"
  uk-scroll="duration: 600" style="display: none"></a>
</div>
