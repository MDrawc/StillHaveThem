<% if @inquiry.errors.any? %>
  <% errors = [] %>
  <% @inquiry.errors.full_messages.each { |msg| errors << msg } %>
  <span id="search-errors" class="uk-form-icon warning-icon blink_me" uk-icon="warning" uk-tooltip="title: please <%= errors.join(" and ") %>; pos: left;  cls: uk-active search-warnings"></span>
<% else %>
  <span id="search-errors" class="uk-form-icon search-icon" uk-icon="search"></span>
<% end %>
