
<div class="game-cover-effect" uk-toggle="target: #i-<%= game['id'] %>">
<img data-src="<%= cover_url %>" alt="<%= game["name"] %>" width="<%= width %>" height="<%= height %>" draggable="false" id="gc-<%= game['id'] %>" class="game-cover" uk-img>


<% if game["xtra"] %>
  <div class="xtra-info" uk-alert>
    <button class="uk-alert-close uk-icon uk-close" type="button" uk-close></button>
    <p><%= game["xtra"] %></p>
  </div>
<% end %>

</div>

<%= render partial: "game_info", locals: { game: game, cover_url: cover_url, options: options } %>
