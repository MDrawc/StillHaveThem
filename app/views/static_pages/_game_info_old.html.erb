<div id="i-<%= game['id'] %>" uk-offcanvas="mode: none">
    <div class="uk-offcanvas-bar <%= game['id'] %>">
        <!-- <button class="uk-offcanvas-close" type="button" uk-close></button> -->
        <!-- TITLE & RELEASE YEAR -->
        <h3 id="info-title"><%= game['name'] %>
        <% if game["first_release_date"]%>
        <span id="info-year">(<%= Time.at(game["first_release_date"]).year %>)</span>
        <% else %>
        <% end %>
        </h3>
        <!-- DEVELOPER -->
        <p id="info-by">by Platinum Games</p>
        <!-- COVER -->
        <% if cover_url %>
        <p id="info-cover"><%= image_tag(cover_url, alt: game['name'], class: "game-cover",
        draggable: "false", width: options[:width]) %></p>
        <% end %>
        <!-- PLATFORMS -->
        <% if platforms = game["platforms"] %>
        <p id="info-platform">
            <% platforms.each do |platform| %>
            <span>
                <% unless platform == platforms.last %>
                <%= platform['name'] + ', ' %>
                <% else %>
                <%= platform['name'] %>
                <% end %>
            </span>
            <% end %>
        </p>
        <% end %>
        <!-- NAVIGATION -->
        <ul class="uk-iconnav">
            <li><%= link_to '', root_url, 'uk-icon' => 'icon: database' %></li>
            <li><%= link_to '', root_url, 'uk-icon' => 'icon: star' %></li>
            <li><%= link_to '', root_url, 'uk-icon' => 'icon: heart' %></li>
        </ul>
        <!-- SUMMARY -->
        <% if summary = get_summary(game, 280, 50) %>
        <hr>
        <p id="info-summary"><%= summary[:start] %><% if summary[:end] %><span id="dots-<%= game['id'] %>"><%= summary[:span] %></span> <span id="more-<%= game['id'] %>" class="more"><%= summary[:end] %></span><button class="uk-icon-link uk-icon ms-b" onclick="myFunction(<%= game['id'] %>)" id="ms-b-<%= game['id'] %>" uk-icon="icon: triangle-down"></button>
    </p>
    <script>
    function myFunction(id) {
    var dots = document.getElementById("dots-" + id);
    var moreText = document.getElementById("more-" + id);
    if (dots.style.display === "none") {
    dots.style.display = "inline";
    moreText.style.display = "none";
    $("#ms-b-" + id).attr("uk-icon", "triangle-down");
    $("#ms-b-" + id).blur();
    } else {
    dots.style.display = "none";
    moreText.style.display = "inline";
    $("#ms-b-" + id).attr("uk-icon", "triangle-up");
    $("#ms-b-" + id).blur();
    }
    }
    </script>
    <% end %>
    <% end %>
    <!-- SLIDESHOW -->
    <% if urls = get_screenshots(game) %>
    <div class="uk-position-relative md-slideshow" uk-slideshow="animation: fade" uk-lightbox="toggle: .uk-position-cover; animation: fade">
        <ul class="uk-slideshow-items">
            <% no_of_screens = 0 %>
            <% urls.each do |url| %>
            <li>
                <%= image_tag(url[:small], alt: game['name'], "uk-cover" => "") %>
                <%= content_tag(:a, '', href: url[:big], class: 'uk-position-cover') %>
            </li>
            <% no_of_screens += 1 %>
            <% end %>
        </ul>
        <!-- SLIDESHOW NAVIGATION -->
        <% if no_of_screens > 1 %>
        <table class="t-scr">
            <tr>
                <td class="arrow">
                    <a class="uk-icon-link" href="#" uk-slideshow-item="previous" uk-icon='chevron-left'>
                    </td>
                    <td>
                        <div class="hor-cen-list">
                            <ul id="screen-nav">
                                <% no_of_screens.times do |t| %>
                                <li uk-slideshow-item="<%= t %>"><%= content_tag(:a, '', href: '#',
                                class: 'uk-icon-link', 'uk-icon' => 'image') %></li>
                                <% end %>
                            </ul>
                        </div>
                    </td>
                    <td class="arrow">
                        <a class="uk-icon-link" href="#" uk-slideshow-item="next" uk-icon='chevron-right'></a>
                    </td>
                </tr>
            </table>
            <% end %>
        </div>
        <% end %>
        <!-- LINKS -->
        <div id="info-links">
            <%= link_to '',"http://www.google.com/search?q=%22#{ game['name'].gsub(' ', '+') }%22+video+game" , class: "uk-icon-button uk-margin-small-right", target: "_blank", "uk-icon" => "google" %>
            <%= link_to '',"https://www.metacritic.com/search/game/#{ game['name'].gsub(' ', '%20') }/results" , class: "uk-icon-button uk-margin-small-right", target: "_blank", "uk-icon" => "google" %>
            <%= link_to '',"https://isthereanydeal.com/search/?q=#{ game['name'].gsub(' ', '+') }" , class: "uk-icon-button", target: "_blank", "uk-icon" => "google" %>
        </div>
    </div>
</div>
