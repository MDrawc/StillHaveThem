var view = '<%= view %>';
var $show_more = $('#show-more');
$show_more.html("<%= j(render :partial => 'results', :locals => { view: view, load_more: true }) %>");
$show_more.attr('id', 'showed_more');
switch (view) {
    case 'list_view':
        break;
    case 'cover_view':
        fitNameInNoCover();
        activateDropdowns($show_more);
        morePlatforms();
        break;
    case 'panel_view':
        activateDropdowns($show_more);
        moreInfo();
        $('.g-drop').slideUp(0);
        break;
}
