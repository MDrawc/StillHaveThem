<% if @is_it_password %>
  var $icon = $('#password-icon');
  var $warning = $icon.next();
  $icon.hide();
  $warning.attr("uk-tooltip", "title: <%= raw @errors.first %>; pos: top-left");
  $warning.show();
  resetSetWarningIcon('#change-password',$icon, $warning);
<% else %>
  var $icon = $('#email-icon');
  var $warning = $icon.next();
  $icon.hide();
  $warning.attr("uk-tooltip", "title: <%= raw @errors.join(', ') %>; pos: top-left");
  $warning.show();
  resetSetWarningIcon('#change-mail',$icon, $warning);
<% end %>
