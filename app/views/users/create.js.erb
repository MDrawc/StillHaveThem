<% if @errors[:email].any? %>
  var mail_tooltip = "title: Email <%= raw @errors[:email].join(', ') %>; pos: top-left";
  $("#mail-icon").hide();
  var $mail_er = $("#mail-er-icon");
  $mail_er.attr('uk-tooltip', mail_tooltip);
  $mail_er.show();
<% end %>

<% if @errors[:password].any? %>
  var key_tooltip = "title: Password <%= raw @errors[:password].join(', ') %>; pos: top-left";
  $("#key-icon").hide();
  var $key_er = $("#key-er-icon");
  $key_er.attr('uk-tooltip', key_tooltip);
  $key_er.show();
<% end %>

