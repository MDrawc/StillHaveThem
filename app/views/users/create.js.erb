<% if @errors[:email].any? %>
  var mail_tooltip = "title: Email <%= raw @errors[:email].join(', ') %>; pos: top-left";
  var $mail_input = $("#signup-mail");
  var $mail_ok = $mail_input.next();
  var $mail_error = $mail_ok.next();

  $mail_ok.hide();
  $mail_error.attr('uk-tooltip', mail_tooltip).show();
  resetSimpleError($mail_input, $mail_ok, $mail_error);
<% end %>

