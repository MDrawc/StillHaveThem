<% if @is_it_password %>
  var $input = $('#change-password');
  var $info = $('#pass-update-info');
  var text = ' Password updated';
  $input.blur().val('');
<% else %>
  var $input = $('#change-mail');
  var $info = $('#mail-update-info');
  var text = ' Check email and reactivate account!';
  $input.blur();
<% end %>
  $input.parent().next().addClass('disabled');
  $info.find('span:last-child').text(text);


  if ($info.is(':hidden')) {
    $info.fadeIn(600);
  } else {
    $info.fadeOut(600).delay(100).fadeIn(600);
  }
