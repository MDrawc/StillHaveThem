<% if @is_it_password %>
  var $input = $('#change-password');
  var $ok_icon = $('#password-icon');
  var $error_icon = $ok_icon.next();
  $ok_icon.hide();
  $error_icon.attr("uk-tooltip", "title: <%= raw @errors.first %>; pos: top-left").show();
<% else %>
  var $input = $('#change-mail');
  var $ok_icon = $input.next();
  var $error_icon = $ok_icon.next();
  $ok_icon.hide();
  $error_icon.attr("uk-tooltip", "title: <%= raw @errors.join(', ') %>; pos: top-left").show();
<% end %>
resetSimpleError($input, $ok_icon, $error_icon);
