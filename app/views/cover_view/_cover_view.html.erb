<div class="uk-grid uk-text-center uk-flex uk-flex-center">
  <% already = [] %>
  <% @inquiry.results.each do |game| %>
  <% igdb_id = game[:igdb_id] %>
  <div id="gs-<%= igdb_id %>" class="game-space">
    <!-- COVER -->
    <% if cover = get_game_cover(game) %>
    <div class="game-cover-effect" style="width: <%= cover[:width] %>px; height: <%= cover[:height] %>px" uk-toggle="target: #i-<%= igdb_id %>">
      <%= image_tag('', id: "gc-#{ igdb_id }", class: "game-cover #{ cover[:from_scrn] }", width: cover[:width], height: cover[:height], 'data-src' => cover[:url], alt: game[:name], 'draggable' => 'false', 'uk-img' => '') %>
      <div class="spinner"><%= svg 'loading' %></div>
      <% else %>
      <div class="game-cover-effect" uk-toggle="target: #i-<%= igdb_id %>">
        <%= content_tag(:div, id: "gc-#{ igdb_id }", class: 'no-cover') do %>
        <%= content_tag(:div, game[:name], class: 'no-cover-game-name unselectable') %>
        <%= svg 'no_image' %>
        <% end %>
        <% end %>
        <!-- ADDITIONAL INFO -->
        <% if game[:addl] %>
        <div class="addl-info" uk-alert>
          <p><%= game[:addl] %></p>
        </div>
        <% end %>
      </div>
      <!-- GAME INFO -->
      <% unless already.include? igdb_id %>
        <% cover = nil if cover && cover[:from_scrn] %>
        <%= render partial: "cover_view/game_info", locals: { game: game, cover: cover } %>
        <% already << igdb_id %>
      <% end %>
      <!-- NAME AND WARNING -->
      <p class="game-name">
        <span>
          <%= link_to game[:name], new_game_url(igdb_id: igdb_id ), id: "add-#{ igdb_id }", remote: true %>
        </span>
        <% if (status_id = game[:status]) && status_id != 0 %>
        <button class="game-warning", uk-icon="icon: warning"
        uk-tooltip="title: <%= convert_status(status_id) %>; pos: right"></button>
        <% end %>
        <% if (category_id = game[:category]) && category_id != 0 %>
        <button class="game-warning", uk-icon="icon: album"
        uk-tooltip="title: <%= convert_category(category_id) %>; pos: right"></button>
        <% end %>
      </p>
      <!-- RELEASE DATE -->
      <p class="game-release-date">
        <% if game[:first_release_date] %>
        <%= Time.at(game[:first_release_date]).year %>
        <% else %>
        -
        <% end %>
      </p>
      <!-- PLATFORMS -->
      <% if platforms = game[:platforms_names] %>
      <% if platforms.size > 3 %>
      <% rest = platforms[3..-1] %>
      <% 2.times do |i| %>
      <p class="game-platform"><%= platforms[i]%></p>
      <% end %>
      <p class="game-platform"><%= platforms[2]%>
        <label class="mp-label"><input class="mp" type="checkbox" uk-icon="triangle-down" uk-toggle="target: #mp-<%= igdb_id %>; animation: uk-animation-fade"></label>
      </p>
      <div id="mp-<%= igdb_id %>" hidden>
        <% rest.each do |platform| %>
        <p class="game-platform"><%= platform %></p>
        <% end %>
      </div>
      <% else %>
      <% platforms.each do |platform| %>
      <p class="game-platform"><%= platform %></p>
      <% end %>
      <% end %>
      <% end %>
      <!-- FORM MODAL -->
      <div id="add-form-<%= igdb_id %>" class="add-form" uk-dropdown="toggle: #add-<%= igdb_id %>; mode: click; boundary: #gs-<%= igdb_id %>; boundary-align: true;  delay-hide: 100;  pos: right-top">
      Loading...
      </div>
      <!-- END -->
    </div>
    <% end %>
  </div>
