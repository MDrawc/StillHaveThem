<% if @view == 'list' %>
    $("#t-ops").find(".modal-content").html("<%= j(render partial: 'my_games/copy_form', locals: { game: @game, collection: @collection, view: @view }) %>");
    var is_list = true;
    listLight('<%= @game.id %>', 't-ops');
<% else %>
    $("#f-lone").html("<%= j(render partial: 'my_games/copy_form', locals: { game: @game, collection: @collection, view: @view }) %>");
    var is_list = false;
<% end %>
if (<%= @collection.needs_platform %>) {
    preselectPlatform(is_list, <%= @game.platform %>);
}
changeButton(is_list, <%= @game.id %>);
activateForm(is_list);
updatePlatformIcon(is_list, <%= @game.id %>);
