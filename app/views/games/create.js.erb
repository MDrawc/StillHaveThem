
var msg_type = '<%= @message_type %>';
var form_type = '<%= @form_type %>';

if (msg_type) {
UIkit.notification({
    message: '<%= @message %>',
    status: msg_type,
    pos: 'top-right',
    timeout: 5000
});

  if (form_type != 'without-dropdown') {
    UIkit.dropdown("#add-<%= @form_type %>-form-<%= @game.igdb_id %>").hide();
  }
}

if (form_type != 'without-dropdown') {
$("#add-<%= @form_type %>-form-<%= @game.igdb_id %> .add-form-errors").html("<%= @errors %>");
}
