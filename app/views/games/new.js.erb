var form_partial = "<%= j(render partial: 'search/add_form', locals: { data: @data, owned: @owned, x_id: @x_id }) %>";
var view = $('#view-container').attr('view');
switch (view) {
    case 'covers':
        paintItBlack('<%= @x_id %>');
        $("#f-lone").html(form_partial);
        var is_list = false;
        break;
    case 'panels':
        $("#f-lone").html(form_partial);
        var is_list = false;
        break;
    default:
        $("#t-ops").find(".modal-content").html(form_partial);
        var is_list = true;
        listLight('<%= @data[:igdb_id]%>', 't-ops');
}
selectLastColl(is_list, '<%= @x_id %>');
activateForm(is_list, '<%= @x_id %>', true);
