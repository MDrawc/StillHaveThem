var form_partial = "<%= j(render partial: 'search/add_form', locals: { data: @data, owned: @owned, x_id: @x_id }) %>";
var view = $('#view-container').attr('view');

switch (view) {
    case 'covers':
        paintItBlack('<%= @x_id %>');
        $("#add-form-<%= @x_id %>").html(form_partial);
        selectLastColl('add', '<%= @x_id %>');
        break;
    case 'panels':
        $("#add-form-<%= @x_id %>").html(form_partial);
        selectLastColl('add', '<%= @x_id %>');
        break;
    default:
        $("#t-ops .modal-content").html(form_partial);
        selectLastColl('list', '<%= @x_id %>');
}

activateForm('add', '<%= @x_id %>');
