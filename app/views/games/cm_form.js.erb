$("#copy-form-<%= @game.id %>").html("<%= j(render partial: 'my_games/copy_form', locals: { game: @game, collection: @collection, view: @view }) %>");
<% if @collection.needs_platform %>
    preselectPlatform('copy', <%= @game.id %>, <%= @game.platform %>);
<% end %>
changeButton(<%= @game.id %>);
activateForm('copy', <%= @game.id %>);
updatePlatformIcon('copy', <%= @game.id %>);
