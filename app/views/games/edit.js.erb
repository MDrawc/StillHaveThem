var game_id = '<%= @game_id %>';
var new_game_id = '<%= @new_game_id %>';
var msg = '<%= @message %>';
var msg_pos = 'top-right';
var success = <%= @errors.empty? %>;
var view = '<%= @view %>';
var reopen = false;
var form_type;

if (msg) {
    UIkit.notification({
        message: $('<div/>').html(msg).text(),
        pos: msg_pos,
        timeout: 5000
    });
}

if (success) {

    if (view === 'panels') {
        reopen = $('#g-drop-' + game_id).attr('style') == 'display: block;';
    }

    var data = { type: 'refresh', view: view };

    if ($('#r-q').text().length != 0 && $('#r-s').text().length != 0) {
        search = $('#r-q').text().split(',');
        data['q'] = {
            name_dev_cont: search[0],
            plat_eq: search[1],
            physical_eq: search[2],
            s: $('#r-s').text()
        };
    } else if ($('#r-q').text().length != 0) {
        search = $('#r-q').text().split(',');
        data['q'] = {
            name_dev_cont: search[0],
            plat_eq: search[1],
            physical_eq: search[2]
        };
    } else if ($('#r-s').text().length != 0) {
        data['q'] = {
            s: $('#r-s').text()
        };
    }

    if ($('.pr em.current').length != 0) {
        var current_page = $('.pr em.current').text();
        data['page'] = current_page;
    }

    $.ajax({
        url: '/collections/<%= @collection.id %>',
        data: data,
        complete: function(data) {
            if (reopen) {
                $('#g-drop-' + new_game_id).show();
            }
        }
    });

} else {
    if (view === 'list') {
        $("#t-ops .add-form-errors").html("<%= j(render partial: 'add_form_errors', locals: { errors: @errors }) %>");
        form_type = 'list';
    } else {
        $("#edit-form-" + game_id + " .add-form-errors").html("<%= j(render partial: 'add_form_errors', locals: { errors: @errors }) %>");
        form_type = 'edit';
    }

    resetFormErrors(form_type, game_id);
}
