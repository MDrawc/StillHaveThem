<% if @view == 'list' %>
  $("#t-ops").find(".modal-content").html("<%= j(render partial: 'my_games/edit_form', locals: { game: @game, collection: @collection, view: @view }) %>");
  var is_list = true;
  listLight('<%= @game.id %>', 't-ops');
<% else %>
  $("#f-lone").html("<%= j(render partial: 'my_games/edit_form', locals: { game: @game, collection: @collection, view: @view }) %>");
  var is_list = false;
<% end %>
preselectPlatform(is_list, <%= @game.platform %>);
