var view = "<%= @view %>";
var form;

if (view === 'list') {
  $("#t-ops .modal-content").html("<%= j(render partial: 'my_games/edit_form', locals: { game: @game, collection: @collection, view: @view }) %>");
  form = 'list'
} else {
  $("#edit-form-<%= @game.id %>").html("<%= j(render partial: 'my_games/edit_form', locals: { game: @game, collection: @collection, view: @view }) %>");
  form = 'edit'
}
preselectPlatform(form, <%= @game.id %>, <%= @game.platform %>);
