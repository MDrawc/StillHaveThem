$("li.active").removeClass('active');
$("#mc-<%= @collection.id %>").addClass('active');
var view = '<%= @view %>';
var refresh = <%= @refresh %>;

if (refresh && view === 'panels') {
  var ids = getIdsOfOpenPanels();
}

cleanOffcanvas();

$("#big-c").html("<%= j(render partial: 'my_games', locals: { collection: @collection, view: @view }) %>");

if (refresh && view === 'panels') {
  openPanels(ids);
}

flip_offc(<%= user_id %>);
filter();
moreInfo();
toggleEditMenu();
fitNameInNoCover();
listHover();
