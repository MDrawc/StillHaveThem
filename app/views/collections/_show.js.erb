$('#side-menu').find("li.active").removeClass('active');
$("#mc-<%= @collection.id %>").addClass('active');

<% if @view == 'panels' %>
    var r_ids = <%= raw @reopen %>;
<% end %>
var view = '<%= @view %>';
var no_games = <%= @games.empty? %>;

cleanOffcanvas();

$("#big-c").html("<%= j(render partial: 'my_games', locals: { collection: @collection, view: @view, shared: shared }) %>");

switch (view) {
    case 'list':
        listHover();
        break;
    case 'covers':
        activateDropdowns();
        underCover(<%= shared %>);
        fitNameInNoCover();
        break;
    case 'panels':
        activateDropdowns();
        activatePreHidee(r_ids);
        closeAllPanels()
        moreInfo();
        break;
}

filterGames();
showHideToolbar(<%= shared %>);
modifyToolbar(view);
toggleEditMenu();
changeMyView(<%= shared %>);
changeTheme(<%= shared %>);
hideShowBackToTop();

if (no_games) {
    disableSortLinks();
}

$('#q_name_dev_cont').focus();
