var msg = '<%= @message %>';
var msg_pos = 'top-right';
var active_el_id = $('a.active').attr('id');
UIkit.modal($('#create-coll-modal')).hide();
$(".side-menu").replaceWith("<%= escape_javascript(render partial: 'layouts/menu') %>");
$('#' + active_el_id).addClass('active');

if ($('.uk-offcanvas-container').length) {
    var offc_class = $('.uk-offcanvas-container').attr('class');

    if (offc_class.includes('uk-offcanvas-flip')) {
        msg_pos = 'top-left';
    }
}

if (msg) {
    UIkit.notification({
        message: $('<div/>').html(msg).text(),
        pos: msg_pos,
        timeout: 5000
    });
}
