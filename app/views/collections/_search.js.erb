<% if @view == 'panels' %>
    var r_ids = <%= raw @reopen %>;
<% end %>
var view = '<%= @view %>';

cleanOffcanvas();

$("#my-games").html('<%= j(render partial: "my_games/#{ @view }", locals: { collection: @collection, shared: shared }) %>');

$('#gsview').attr('value', view);
$('#r-q').text(<%= raw query %>);
$('#r-s').text('<%= sort %>');

switch (view) {
    case 'list':
        listHover();
        break;
    case 'covers':
        activateDropdowns();
        underCover(<%= shared %>);
        fitNameInNoCover();
        break;
    case 'panels':
        activateDropdowns();
        activatePreHidee(r_ids);
        closeAllPanels();
        moreInfo();
        break;
}

modifyToolbar(view);
