$("li.active").removeClass('active');
$("#mc-<%= @collection.id %>").addClass('active');

var refresh = eval('<%= @refresh %>')
if (refresh) {
  var ids = [];
  var arr = $('.g-drop');
  arr.each(function() {
      if ($(this).attr('style') == 'display: block;') {
          ids.push($(this).attr('id'));
      }
  });
}

cleanOffcanvas();

$("#big-c").html("<%= j(render partial: 'my_games', locals: { collection: @collection, view: @view }) %>");

if (refresh) {
  ids.forEach(id => $('#' + id).show());
}

filter();
moreInfo();
toggleEditMenu();
fitNameInNoCover();

