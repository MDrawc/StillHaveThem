var ids = [];
$('li[id^=mc-]').each(function(){ ids.push(this.id)});
var index = ids.indexOf('mc-<%= @collection.id %>');

$(".side-menu").replaceWith("<%= j(render partial: 'layouts/menu') %>");

var url = ''
if ((id = ids[index-1]) != null) {
  url += '/collections/' + id.substring(3)
} else {
  if ((id = ids[index+1]) != null) {
    url += '/collections/' + id.substring(3)
  } else {
    url += '/search/'
  }
}

$.ajax({ url: url });
