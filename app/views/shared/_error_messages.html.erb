<% if object.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger">
    <h5 class='alert-heading'>The form contains <%= pluralize(object.errors.count, "error") %>:</h5>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
      <li class="single-error"><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>
