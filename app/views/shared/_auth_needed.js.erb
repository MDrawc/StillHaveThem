var $modal = $('<%= selector %>');
var $header = $modal.find('.modal-header');
var $content = $modal.find('.modal-content');
$header.hide();
$content.html('<%= j(render partial: 'check_email', locals: { email: email })%>');

UIkit.util.once($modal, 'hidden', function() {
    $header.show();
    $content.empty();
});
